<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/et_latitude"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Hello World!"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/text_size"
            android:background="@drawable/border_shape"
            android:layout_marginTop="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/latitude"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/et_latitude"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/et_longitude"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Hello World!"
            android:background="@drawable/border_shape"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_bottom"
            android:paddingLeft="@dimen/text_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/longitude"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/altitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Altitude"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/et_longitude"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/et_altitude"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Hello World!"
            android:background="@drawable/border_shape"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/altitude"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/et_altitude"
            app:layout_constraintStart_toStartOf="parent"
            />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="Panthapath"
            android:background="@drawable/border_shape"
            android:paddingTop="@dimen/text_size"
            android:gravity="start"
            android:paddingLeft="@dimen/text_size"
            android:layout_marginTop="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            android:textSize="@dimen/text_size"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintStart_toStartOf="parent"
            />
        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="save"
            android:textSize="@dimen/text_size"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_address"
            />
        <Button
            android:id="@+id/next_page"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:textSize="@dimen/text_size"
            android:backgroundTint="#2196F3"
            android:layout_marginTop="@dimen/margin_bottom"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginBottom="@dimen/margin_bottom"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/save"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>